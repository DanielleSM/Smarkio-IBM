extends layout

mixin component(text)
  div.audioText_list
    div.comment= text
    div.btn_ouvir
      button.play(class='btn btn-primary') Ouvir

block content
  div.container-fluid
   div.row
      div.container1
        div.container_audioText
          h1.container_title Comentário
          textarea.audio_text(name='comentario')
          button.btn_audioText(type='submit', class='btn btn-primary') Cadastrar
        div.divisor
        div.show_list
          h1.container_title Comentários!
          div.list-group
            for n in data
              +component(n.comentario)